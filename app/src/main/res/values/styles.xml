<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!-- Dashboard card style-->
    <style name="dashboard_card_con">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="dashboard_card_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">Content</item>
        <item name="android:background">@drawable/border_radius_white_bg</item>
      <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize"><![CDATA[16sp]]></item>
    </style>
<!-- ./ Dashboard card-->

<!-- Menu Page Styles -->
    <style name="menu_page_nav_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#9D9DA8</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
<style name="list_headline">
   <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textStyle">bold</item>
</style>

    <style name="list_img">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">7dp</item>
    </style>

<!-- ./ Menu page styles-->

</resources>
