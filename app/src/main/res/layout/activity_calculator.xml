<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#fff"
    tools:context=".ActivityCalculator">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="#fff"

        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dice_toolbar"
        android:layout_marginTop="0dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_inner_con"
            android:padding="15dp"
            android:minHeight="150dp"

            >

<TextView
    android:id="@+id/tv_calc_operation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text="233x5"
    android:gravity="end"
    android:textSize="18sp"
    />
            <TextView
                android:id="@+id/tv_calc_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text=" = 2335"
                android:gravity="end"
                android:textSize="30sp"
                />





        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_below="@id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#D1D1D1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="4"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#fff"
                android:height="50dp"
                android:width="50dp"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#fff"
                android:height="50dp"
                android:width="50dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#fff"
                android:height="50dp"
                android:width="50dp"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#fff"
                    android:height="50dp"
                    android:width="50dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/eee"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textColor="#000"

            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#000"
            android:textSize="18sp"
            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />


        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textColor="#000"
            android:textSize="25sp"
            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#000"
            android:textSize="25sp"
            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_weight="1"
            />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:height="50dp"
                android:width="50dp"
                android:gravity="center"
                android:layout_margin="10dp"
            android:layout_weight="1"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000"
            android:textSize="18sp"
            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:textColor="#000"
            android:textSize="18sp"
            android:background="@color/colorAccent"
            android:height="50dp"
            android:width="50dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            />




    </LinearLayout>


    </LinearLayout>

</RelativeLayout>