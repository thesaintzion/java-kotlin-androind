<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"

    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      >
      <LinearLayout
          android:id="@+id/ll_bg1"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:background="@drawable/show_curve_bg"
          android:orientation="horizontal"
          >
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingRight="30dp"
          android:paddingLeft="30dp"
          android:layout_marginTop="40dp"
          >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:orientation="vertical"
    android:layout_weight="1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Saint Stephen E."
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#eee"
        android:textStyle="bold"
        android:text="ststephen@gmail.com"
        android:layout_weight="1"
        />
</LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Next >>"
              android:textColor="#fff"
              android:textSize="15sp"
             android:gravity="end"

              android:textStyle="bold" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_grid_con_1"
         android:layout_marginTop="130dp"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>


      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_grid_con_2"
          android:layout_below="@id/ll_grid_con_1"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_grid_con_3"
          android:layout_below="@id/ll_grid_con_2"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_grid_con_5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/ll_grid_con_4"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/ll_grid_con_6"
          android:layout_below="@id/ll_grid_con_5"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_grid_con_4"
          android:layout_below="@id/ll_grid_con_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="@style/dashboard_card_con"
          >
          <TextView style="@style/dashboard_card_tv"/>
          <TextView style="@style/dashboard_card_tv"/>
      </LinearLayout>

  </RelativeLayout>



</ScrollView>