<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eee"
    tools:context=".ActivityMenuPage">
<!--Toolbar-->

    <RelativeLayout
        android:id="@+id/ll_menu_page_bg1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/show_curve_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_polymer_black_24dp"

                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="List Of Apps"
            android:textColor="#eee"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_menu_page_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:id="@+id/ll_grid_con_1"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="160dp"
               android:layout_marginBottom="10dp"

               >
                   <TextView
                       android:text="Link 1"
                       style="@style/menu_page_nav_style"
                       />
                   <TextView
                       android:text="Link 2"
                       style="@style/menu_page_nav_style"
                       />
                   <TextView
                       android:text="Link 1"
                       style="@style/menu_page_nav_style"
                       />
                   <TextView
                       android:text="Link 2"
                       style="@style/menu_page_nav_style"
                       />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_roll_dice"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_00"
                   android:src="@drawable/ic_border_outer_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_00"
                   style="@style/list_headline"
                   android:text="Roll Dice"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_yoga_remind"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_6"
                   android:src="@drawable/ic_alarm_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_6"
                   style="@style/list_headline"
                   android:text="Yoga reminder"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_todo_app"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_4"
                   android:src="@drawable/ic_check_circle_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_4"
                   style="@style/list_headline"
                   android:text="Todo app"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_roman_app"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_3"
                   android:src="@drawable/ic_check_circle_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_3"
                   style="@style/list_headline"
                   android:text="Roman to number converter"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_list_con_2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               android:elevation="0dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_2"
                   android:src="@drawable/ic_check_circle_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_2"
                   style="@style/list_headline"
                   android:text="Bottle spinal"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_list_con_5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_5"
                   android:src="@drawable/ic_format_align_left_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_5"
                   style="@style/list_headline"
                   android:text="Consume blog API"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_list_con_7"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_7"
                   android:src="@drawable/ic_dialpad_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_7"
                   style="@style/list_headline"
                   android:text="Calculator"
                   />
           </LinearLayout>



           <LinearLayout
               android:id="@+id/ll_list_con_8"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/border_radius_white_bg"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               >
               <ImageView
                   android:id="@+id/im_list_img_8"
                   android:src="@drawable/ic_settings_voice_black_24dp"
                   android:background="@drawable/icon_bg_circle"
                   style="@style/list_img"
                   />
               <TextView
                   android:id="@+id/tv_list_headline_8"
                   style="@style/list_headline"
                   android:text="Karoke singing app"
                   />
           </LinearLayout>





       </LinearLayout>
    </ScrollView>


</RelativeLayout>